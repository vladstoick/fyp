<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Challenges</li>
  </ol>
</nav>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.title %></td>
        <td>
          <% if policy(challenge).show? %>
            <%= link_to "Show challenge", challenge_path(id: challenge.id) %>
          <% else %>
          <%= link_to(
            "New submission",
            new_challenge_submission_path(challenge_id: challenge.id)
          ) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(Challenge).create? %>
  <%= link_to "Create new challenge", new_challenge_path, class: "btn btn-primary" %>
<% end %>
